
<br /><br/>
<h2 align="center">Scoreboard</h2>
<hr>

<div class="container">
<div class="row">
<% @users.each do |user| %>

<div class="col-md-2">
<%= image_tag(user.image_url, size: '50x50') %>
</div>
<div class="col-md-4">
<%= user.name %>
</div>
<div class="col-md-2">
<%= user.score %>
</div>
<div class="col-md-4">
<%= user.updated_at.strftime("%v %X") %>
</div>

<br /><br/><hr>
<% end %>
</div>
</div>
<hr>
