

<% if current_user %>
<div class="container">
<%= image_tag(current_user.image_url, size: '50x50') %>&nbsp;&nbsp;
<%= current_user.name %><%= ", "%><%= current_user.college %>

<p style="font-size:20px; float:right;"><%= "Score : "%><%= current_score %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Level <%= current_score/10+1 %></p>

<div class="row">

<hr>

<div class="col-md-4">

<%= @question.desc %>

<div class="form-group">
	<%= form_tag(root_path, method: "get") do %>
	<%= text_field_tag :answer, params[:answer], placeholder: "Your Answer", class: 'form-control' %><br />
	<span style="float:right;">
	<%= submit_tag "Submit", class:'btn btn-primary' %>
	</span>
	<% end %>
</div>


</div>

<div class="col-md-4">
</div>

<div class="col-md-4">
 <% flash.each do |key, value| %>

        <div class="alert alert-info" role="alert"><%= value %></div>
      <% end %>
</div>
<hr>
</div>
</div>
<% else %>
<div class="container">
<div class="well">
<h2 align="center">Online Treasure Hunt</h2>
</div>
</div>
<% end %>
<br>
<br><br><br><br><br><br>